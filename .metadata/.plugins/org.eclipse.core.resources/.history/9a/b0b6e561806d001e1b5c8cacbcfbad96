package chap07_class.circle;

public class Circle {
	// 1. 상수 double PI 31
	final double PI = 3.14;

	// 2. 반지름 int radius
	int radius;

	// 3. 기본 생성자 1개와 radius를 받아 초기화하는 생성자 1개
	public Circle() {
		
	}
	
	public Circle(int radius) {
		this.radius = radius;
	}
	
	//4. 원의 둘레를 계산해 double형으로 리턴하는 메소드 한개(매개변수 없이)
	
	public double round() {
		return 2*PI*radius;
	}
}
